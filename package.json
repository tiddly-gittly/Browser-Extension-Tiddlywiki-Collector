{
  "name": "browser-extension-react-ts-starter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "run-s clean && vite",
    "build": "run-s clean && tsc && vite build && run-s firefox-mv2-build",
    "firefox-mv2-build": "node tools/unstable_mv3ToMv2Build.js",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:dist-firefox-v2": "rimraf dist-firefox-v2",
    "format": "run-p format:*",
    "format:eslint": "run-s \" lint:eslint --fix \"",
    "format:prettier": "run-s \" lint:prettier --write \"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint . --ext .js,.ts,.tsx --max-warnings 0 --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.(md|json|yml)\" --ignore-path .gitignore --check",
    "lint:type": "tsc --noEmit",
    "test": "jest",
    "ci:test": "run-s \" test --ci --reporters=\"default\" --reporters=\"github-actions\" \"",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "lodash-es": "^4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "redux-persist-webextension-storage": "^1.0.2",
    "webext-zustand": "^0.2.0",
    "webextension-polyfill": "^0.10.0",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.19",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/fs-extra": "^11.0.2",
    "@types/jest": "^29.5.5",
    "@types/lodash-es": "^4.17.9",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@types/redux-persist-webextension-storage": "^1.0.1",
    "@types/webextension-polyfill": "^0.10.4",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "construct-style-sheets-polyfill": "^3.1.0",
    "dprint": "^0.41.0",
    "eslint": "^8.51.0",
    "eslint-config-tidgi": "^1.1.5",
    "fs-extra": "^11.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "5.2.2",
    "vite": "^4.4.11"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  }
}
