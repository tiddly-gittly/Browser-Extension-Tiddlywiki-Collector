{
  "env": {
    "es2020": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "tidgi"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020,
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": [],
  "rules": {
  },
  "overrides": [
    {
      "files": [".*rc.js", ".*rc.cjs", "*.config.js", "*.config.cjs"],
      "env": {
        "node": true
      }
    }
  ],
  "ignorePatterns": ["dist/**", "dist-firefox-v2"]
}
