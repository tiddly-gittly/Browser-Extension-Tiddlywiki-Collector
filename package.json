{
  "name": "browser-extension-tiddlywiki-collector",
  "private": true,
  "version": "0.6.0",
  "type": "module",
  "scripts": {
    "dev": "run-s clean && vite",
    "build:firefox": "node scripts/unstable_mv3ToMv2Build.js",
    "build": "run-s clean && tsc && vite build && run-s build:firefox && run-p bundle:*",
    "bundle:chrome": "web-ext build -s dist -a bundle -o -n tiddlywiki-collector-chrome.zip",
    "bundle:firefox": "web-ext build -s dist-firefox -a bundle -o -n tiddlywiki-collector-firefox.zip",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:bundle": "rimraf bundle",
    "clean:dist-firefox": "rimraf dist-firefox",
    "format": "run-p format:*",
    "format:eslint": "run-s \" lint:eslint --fix \"",
    "format:dprint": "run-s \" lint:dprint fmt \"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint . --ext .js,.ts,.tsx --max-warnings 0 --ignore-path .gitignore",
    "lint:dprint": "dprint fmt",
    "lint:type": "tsc --noEmit",
    "test": "jest",
    "ci:test": "run-s \" test --ci --reporters=\"default\" --reporters=\"github-actions\" \"",
    "update": "npm-check-updates -u && dprint config update",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "beautiful-react-hooks": "^5.0.2",
    "fast-deep-equal": "^3.1.3",
    "i18next": "^23.16.5",
    "i18next-browser-languagedetector": "^8.0.0",
    "immer": "^10.1.1",
    "just-debounce": "^1.1.0",
    "md-to-tid": "^0.0.4",
    "mdast": "^3.0.0",
    "mdast-util-from-markdown": "^2.0.2",
    "npm-check-updates": "^17.1.11",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-frame-component": "^5.2.7",
    "react-i18next": "^15.1.1",
    "react-select": "^5.8.3",
    "react-tabs": "^6.0.2",
    "react-toastify": "^10.0.6",
    "redux-persist-webextension-storage": "^1.0.2",
    "rehype-parse": "^9.0.1",
    "rehype-remark": "^10.0.0",
    "remark-gfm": "4.0.0",
    "remark-pangu": "^2.2.0",
    "remark-stringify": "^11.0.0",
    "tiny-delay": "^1.2.0",
    "type-fest": "^4.26.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "webext-zustand": "^0.2.0",
    "webextension-polyfill": "^0.12.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.280",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/mdast": "^4.0.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/redux-persist-webextension-storage": "^1.0.3",
    "@types/webextension-polyfill": "^0.12.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "construct-style-sheets-polyfill": "^3.1.0",
    "dprint": "^0.47.5",
    "eslint": "^9.14.0",
    "eslint-config-tidgi": "^1.2.3",
    "fs-extra": "^11.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.1",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.14",
    "tiddlywiki": "^5.3.5",
    "ts-jest": "^29.2.5",
    "tw5-typed": "^0.5.14",
    "typescript": "5.6.3",
    "vite": "^5.4.11",
    "web-ext": "^8.3.0"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "pnpm": {
    "patchedDependencies": {
      "@crxjs/vite-plugin@2.0.0-beta.21": "patches/@crxjs__vite-plugin@2.0.0-beta.21.patch"
    }
  }
}
